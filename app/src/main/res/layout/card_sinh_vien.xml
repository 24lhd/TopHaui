<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_item"
    android:layout_marginBottom="@dimen/margin_item">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_view_inner"
        android:background="@drawable/selecter"
        android:layout_marginBottom="@dimen/margin_view_inner"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/id_stt"
                android:gravity="center"
                android:minWidth="29sp"
                style="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/md_black_1000"
                android:layout_height="match_parent" />
            <View
                android:layout_width="1dp"
                android:background="@color/md_blue_grey_100"
                android:layout_margin="@dimen/margin_view"
                android:layout_height="match_parent"></View>
            <TextView
                android:layout_width="48sp"
                android:text="TL"
                android:gravity="center"
                android:id="@+id/id_tl"
                style="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/md_red_500"
                android:textStyle="bold"
                android:layout_gravity="center|left"
                android:layout_height="match_parent" />
            <View
                android:layout_width="1dp"
                android:background="@color/md_blue_grey_100"
                android:layout_margin="@dimen/margin_view"
                android:layout_height="match_parent"></View>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Tên sinh vien"
                        android:textColor="@color/md_black_1000"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:textStyle="bold"
                        android:id="@+id/id_ten_sv"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/id_msv"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/colorAccent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Lớp"
                        android:layout_marginTop="@dimen/margin_view_inner"
                        android:layout_weight="1"
                        android:layout_marginBottom="@dimen/margin_view_inner"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:id="@+id/id_lop"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/colorAccent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_view"
            android:layout_marginRight="@dimen/margin_view"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Sinh viên năm "
                style="@style/TextAppearance.AppCompat.Caption"
                android:gravity="center"
                android:textColor="@color/md_blue_500"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:id="@+id/id_nam"
                style="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text=" Khóa "
                style="@style/TextAppearance.AppCompat.Caption"
                android:gravity="center"
                android:textColor="@color/md_blue_500"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/id_khoa"
                style="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>